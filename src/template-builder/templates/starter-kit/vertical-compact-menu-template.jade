//- Add Vendor specific CSS
block vendorcss

//- Page CSS
//------------------------------

//- Add custom page specific CSS
block pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/core/menu/menu-types/vertical-compact-menu.css')
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/core/menu/menu-types/vertical-overlay-menu.css')

