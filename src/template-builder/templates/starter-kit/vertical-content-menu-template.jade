extends ../../base

//- Template customization
//------------------------

block templateConfig
	- var templateCustom = "vertical-layout vertical-content-menu" //- OPTIONS: menu-flipped
	- var dataMenu = "vertical-content-menu"

//- Page level customization
//------------------------
block pageConfig

block navbarConfig
	- var navbarPosition = "navbar-fixed-top"
	- var navbarColor = "navbar-light"
	- var navbarBrandCenter = true
	- var navbarHideOnScroll = true
	- var navbarShadow = true
	- var navbarBorder = true

block verticalMenuConfig
	- var menuType = "menu-static"
	- var menuColor = "menu-light"
	- var menuOpenType = "menu-accordion"
	- var menuShadow = true	
	- var isContentMenu = true

block footerConfig
	- var footerType = "navbar-fixed-bottom"
	- var footerColor = "footer-light"
	- var footerHideOnScroll = true	

//- Template includes
//-------------------
block preloader
	include ../sections/preloader/vertical-content-menu

block header
	include ../sections/header/sk-header

block page-header
	if blankPage != true
		include ../../pages/page-headers/breadcrumbs-basic

block main-menu
	include ../sections/menu/starter-kit/vertical-content-menu

block footer
	include ../sections/footer/footer

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
block vendorcss

//- Page CSS
//------------------------------

//- Add custom page specific CSS
block pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/core/menu/menu-types/vertical-content-menu.css')
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/core/menu/menu-types/vertical-overlay-menu.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
block vendorjs
	script(src='../../../app-assets/vendors/js/ui/headroom.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
block pagejs