//------------------------------
//- Add custom page specific JS
append pagejs
	//- Template JS for checkboxes and radios
	script(src='../../../app-assets/js/scripts/forms/checkbox-radio.js', type='text/javascript')
	//- Template JS for Switch
	script(src='../../../app-assets/js/scripts/forms/switch.js', type='text/javascript')