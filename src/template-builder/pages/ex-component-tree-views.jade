block pageVars
	- var pageTitle    = "Bootstrap Tree View"
	- var pageSubTitle = "Tree View for Twitter Bootstrap"
	- var description  = "A simple and elegant solution to displaying hierarchical tree structures (i.e. a Tree View) while leveraging the best that Twitter Bootstrap has to offer."
	- var activeMenu   = "ex-component-tree-views"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Extra Components"}, {name:"Tree Views"}])



//- Include page content in page block
append content
	include ../contents/ex-component-tree-views.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/extensions/bootstrap-treeview.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src='../../../app-assets/vendors/js/extensions/bootstrap-treeview.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src='../../../app-assets/js/scripts/extensions/tree-view.js', type='text/javascript')