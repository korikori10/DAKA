	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/weather-icons/climacons.min.css')

//- Page CSS
//------------------------------
//- Add custom page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/core/colors/palette-gradient.css')
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/plugins/calendars/clndr.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	//- Page js for advance cards
	script(src='../../../app-assets/vendors/js/charts/raphael-min.js', type='text/javascript')
	//- Morris Chart
	script(src='../../../app-assets/vendors/js/charts/morris.min.js', type='text/javascript')
	//- Chart JS
	script(src='../../../app-assets/vendors/js/charts/chart.min.js', type='text/javascript')
	//- Vector Maps
	script(src='../../../app-assets/vendors/js/charts/jvector/jquery-jvectormap-2.0.3.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/charts/jvector/jquery-jvectormap-world-mill.js', type='text/javascript')
	//- clndr
	script(src='../../../app-assets/vendors/js/extensions/moment.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/extensions/underscore-min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/extensions/clndr.min.js', type='text/javascript')
	//- Echarts JS
	script(src='../../../app-assets/vendors/js/charts/echarts/echarts.js', type='text/javascript')
	//- Unslider
	script(src='../../../app-assets/vendors/js/extensions/unslider-min.js', type='text/javascript')

