block pageVars
	- var pageTitle    = "C3 Grid Chart"
	- var pageSubTitle = "c3 grid chart examples"
	- var description  = "Examples of grid charts like grid lines, x grid lines, y grid lines"
	- var activeMenu   = "c3-grid-chart"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"C3 Charts"}, {name:"Grid Chart"}])

//- Include page content in page block
append content
	include ../contents/c3-grid-chart.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/charts/c3.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src='../../../app-assets/vendors/js/charts/d3.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/charts/c3.min.js', type='text/javascript')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/plugins/charts/c3-chart.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src='../../../app-assets/js/scripts/charts/c3/grid/grid-lines.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/c3/grid/x-grid-lines.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/c3/grid/y-grid-lines.js', type='text/javascript')