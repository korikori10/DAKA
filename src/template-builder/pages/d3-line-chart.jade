block pageVars
	- var pageTitle    = "D3 Line Chart"
	- var pageSubTitle = "D3 line chart examples"
	- var description  = "A line chart or line graph is a type of chart which displays information as a series of data points called 'markers' connected by straight line segments."
	- var activeMenu   = "d3-line-chart"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"D3 Charts"}, {name:"Line Chart"}])

//- Include page content in page block
append content
	include ../contents/d3-line-chart.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/charts/d3.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src='../../../app-assets/vendors/js/charts/d3.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src='../../../app-assets/js/scripts/charts/d3/line/line.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/d3/line/area.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/d3/line/bivariate.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/d3/line/stacked-area.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/d3/line/multi-series-line.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/d3/line/difference.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/d3/line/focus-context.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/d3/line/line-tension.js', type='text/javascript')