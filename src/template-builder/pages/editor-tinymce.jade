block pageVars
	- var pageTitle = "tinyMCE"
	- var pageSubTitle = "Everything you expect from a rich text editor and more..."
	- var description  = "TinyMCE (Tiny Moxiecode Content Editor) is a platform-independent, browser-based WYSIWYG editor control, written in JavaScript and released as open-source software under the LGPL by Ephox."
	- var activeMenu = "editor-tinymce"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Editors"}, {name:"tinyMCE"}])

//- Include page content in page block
append content
	include ../contents/editor-tinymce.html

append vendorcss
	//- Default TinyMCE CSS
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/editors/tinymce/tinymce.min.css')
		
append vendorjs
	//- TinyMCE editor JS
	script(src='../../../app-assets/vendors/js/editors/tinymce/tinymce.js', type='text/javascript')
	
append pagejs
	//- Template Js for TinyMCE
	script(src='../../../app-assets/js/scripts/editors/editor-tinymce.js', type='text/javascript')