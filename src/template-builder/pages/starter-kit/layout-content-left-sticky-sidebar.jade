block pageVars
	- var pageTitle    = "Content Left Sticky Sidebar"
	- var pageSubTitle = "content layout with left sticky sidebar"
	- var description  = "The content layout page structure with navigation, content area and left sticky sidebar."
	- var activeMenu   = "content-left-sticky-sidebar"

extends template

append pageConfig
	- var headerType = 'sk-header'
	- var contentLayout = 'content-left-sidebar'
	- var starterKit    = true
	- var sidebarSticky = true

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Starters Kit"}, {name:"Content Left Sidebar Sticky"}])

//- include  page content in content block
append content
	include ../../contents/starter-kit/starter-page-content.html

append sidebar
	include ../../contents/starter-kit/sk-sidebar-common.html

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
append vendorcss

//- Page CSS
//------------------------------

//- Add custom page specific CSS
append pagecss

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(type='text/javascript', src='../../../app-assets/vendors/js/ui/jquery.sticky.js')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(type='text/javascript', src='../../../app-assets/js/scripts/pages/sk-content-sidebar.js')