block pageVars
	- var pageTitle   = "Advance Interactive Cards"
	- var pageSubTitle = "Extended default cards"
	- var description = "Exteding default bootstrap card functionality. "
	- var activeMenu  = "card-interactive"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Components"}, {name:"Advance Interactive Cards"}])

//- Include page content in page block
append content
	include ../contents/card-interactive.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/charts/morris.css')
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/charts/rickshaw.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	//- Chartjs
	script(src='../../../app-assets/vendors/js/charts/chart.min.js', type='text/javascript')
	//- Interactive Maps
	script(src='../../../app-assets/vendors/js/charts/d3.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/charts/rickshaw.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	//- Advance cards JS
	script(src='../../../app-assets/js/scripts/cards/card-interactive.js', type='text/javascript')