block pageVars
	- var pageTitle    = "C3 Line Chart"
	- var pageSubTitle = "c3 line chart examples"
	- var description  = "A line chart or line graph is a type of chart which displays information as a series of data points called 'markers' connected by straight line segments."
	- var activeMenu   = "c3-line-chart"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"C3 Charts"}, {name:"Line Chart"}])

//- Include page content in page block
append content
	include ../contents/c3-line-chart.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/charts/c3.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src='../../../app-assets/vendors/js/charts/d3.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/charts/c3.min.js', type='text/javascript')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/plugins/charts/c3-chart.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src='../../../app-assets/js/scripts/charts/c3/line/line.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/c3/line/spline.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/c3/line/area.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/c3/line/step.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/c3/line/line-region.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/c3/line/simple-xy.js', type='text/javascript')
	script(src='../../../app-assets/js/scripts/charts/c3/line/multiple-xy.js', type='text/javascript')