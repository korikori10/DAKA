block pageVars
	- var pageTitle = "Summernote"
	- var pageSubTitle = "Versatile JavaScript text editor"
	- var description  = "CodeMirror is a versatile text editor implemented in JavaScript for the browser. It is specialized for editing code, and comes with over 100 language modes and various addons that implement more advanced editing functionality."
	- var activeMenu = "editor-summernote"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Editors"}, {name:"Summernote"}])



//- Include page content in page block
append content
	include ../contents/editor-summernote.html

append vendorcss
	//- Default Summernote CSS
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/editors/summernote.css')
	//- CodeMirror CSS for code view
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/editors/codemirror.css')

	//- Editor Template for CodeMirror Code View
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/editors/theme/monokai.css')

append vendorjs
	//- Using CodeMirror editor for Summernote Code view
	script(src='../../../app-assets/vendors/js/editors/codemirror/lib/codemirror.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/editors/codemirror/mode/xml/xml.js', type='text/javascript')

	//- Basic Summernote JS
	script(src='../../../app-assets/vendors/js/editors/summernote/summernote.js', type='text/javascript')

append pagejs
	//- Template Js for summernote
	script(src='../../../app-assets/js/scripts/editors/editor-summernote.js', type='text/javascript')